<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" 
        parent="@android:style/Theme.Holo.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="@android:textStyle">normal</item>
        <item name="@android:attr/actionBarSize">49dp</item>
        <item name="android:actionBarStyle">@style/AppTheme.ThanksActionBar</item>
    </style>
    
    <style name="AppTheme.ThanksActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#29d9c2</item>
        <item name="@android:textSize">11sp</item>
        <item name="android:displayOptions">showCustom</item><!-- 默认显示CustomView,防止启动时的闪烁 -->
    </style>

</resources>
